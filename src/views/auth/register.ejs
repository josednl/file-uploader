<%- include('../partials/header', { title: 'Create Account' }) %>

<main class="min-h-screen flex items-center justify-center bg-gray-50 px-6 py-16">
  <div class="max-w-md w-full bg-white shadow-2xl border border-gray-100 rounded-xl p-10 sm:p-12 space-y-7">

    <div class="text-center">
      <div class="flex justify-center mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
        </svg>
      </div>
      <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">
        Create Your Account
      </h1>
      <p class="text-base text-gray-500 mt-2">Start uploading and managing your files today.</p>
    </div>

    <% if (typeof include === 'function') { %>
      <%- include('../partials/flash') %>
    <% } else if (error && error.length > 0) { %>
      <div class="bg-red-100 border border-red-300 text-red-700 px-4 py-3 rounded-lg text-sm font-medium" role="alert">
        <%= error %>
      </div>
    <% } %>

    <form action="/register" method="POST" class="space-y-6">
      
      <div>
        <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
        <input type="text" name="name" id="name" required placeholder="Choose a username"
               class="mt-1 block w-full p-3 border-2 border-gray-300 rounded-lg shadow-sm
                      focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition"
                      value="<%= typeof name !== 'undefined' ? name : '' %>">
      </div>

      <div>
        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
        <input type="email" name="email" id="email" required placeholder="you@example.com"
               class="mt-1 block w-full p-3 border-2 border-gray-300 rounded-lg shadow-sm
                      focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition"
                      value="<%= typeof email !== 'undefined' ? email : '' %>">
      </div>

      <div>
        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
        <input type="password" name="password" id="password" required placeholder="Choose a secure password"
               class="mt-1 block w-full p-3 border-2 border-gray-300 rounded-lg shadow-sm
                      focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition">
      </div>

      <div>
        <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
        <input type="password" name="confirmPassword" id="confirmPassword" required placeholder="Retype your password"
               class="mt-1 block w-full p-3 border-2 border-gray-300 rounded-lg shadow-sm
                      focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition">
      </div>

      <button type="submit"
              class="w-full inline-flex items-center justify-center gap-2 px-4 py-3 bg-blue-600 text-white text-lg font-semibold
                     rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
        </svg>
        Create Account
      </button>
    </form>

    <div class="space-y-3 pt-2">
      <p class="text-center text-sm text-gray-600">
        Already have an account?
        <a href="/login" class="text-blue-600 hover:text-blue-700 font-semibold transition">
          Log in here
        </a>
      </p>

      <p class="text-center">
        <a href="/" class="text-sm text-gray-500 hover:text-gray-700 transition font-medium">
          ‚Üê Back to Home
        </a>
      </p>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
