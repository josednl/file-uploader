<%- include('partials/header', { title: 'Welcome' }) %>

<div class="flex flex-col items-center justify-center min-h-[calc(100vh-4rem)] bg-gray-50 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl text-center py-16">
        <h1 class="text-5xl font-extrabold text-blue-600 mb-4">
            Welcome to File Uploader
        </h1>
        <p class="text-lg text-gray-700 mb-6">
            The simple and secure way to store and share your files online.
        </p>
        <p class="text-gray-500 mb-10">
            Create an account to get started, or log in to access your dashboard.
        </p>

        <% if (!locals.user) { %>
            <div class="flex justify-center space-x-4">
                <a href="/register" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition">
                    <i class="fas fa-user-plus mr-2"></i> Get Started
                </a>
                <a href="/login" class="inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 hover:border-gray-400 transition">
                    <i class="fas fa-sign-in-alt mr-2"></i> Login
                </a>
            </div>
        <% } else { %>
            <div class="text-center mt-6">
                <a href="/dashboard" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-green-600 hover:bg-green-700 transition">
                    <i class="fas fa-arrow-right mr-2"></i> Go to Dashboard
                </a>
            </div>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %>
