<%- include('partials/header', { title: 'Welcome' }) %>

<div class="flex flex-col items-center justify-center min-h-screen bg-white px-6 py-20">
  <div class="max-w-3xl text-center">

    <div class="flex items-center justify-center mb-6 text-blue-600">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4m0-10l8-4m-8 4L4 7m8 4V3" />
      </svg>
    </div>

    <h1 class="text-5xl sm:text-6xl font-extrabold text-gray-900 leading-tight mb-4 tracking-tight">
      Manage Your Files, <span class="text-blue-600">No Clutter.</span>
    </h1>

    <p class="text-xl text-gray-600 mb-6 max-w-2xl mx-auto">
      Access, share, and organize all your documents with a platform built for speed and security.
    </p>

    <p class="text-base text-gray-500 mb-10">
      Join the platform to begin uploading your first file.
    </p>

    <% if (!locals.user) { %>
    <div class="flex flex-col sm:flex-row justify-center items-center gap-4 flex-wrap">
      <a href="/register" class="inline-flex items-center justify-center px-8 py-3 bg-blue-600 text-white text-lg font-bold rounded-lg shadow-lg hover:bg-blue-700 transition duration-300 focus:outline-none focus:ring-4 focus:ring-blue-300 gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
        </svg>
        Create Free Account
      </a>

      <a href="/login" class="inline-flex items-center justify-center px-8 py-3 border-2 border-gray-300 text-lg font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-100 transition duration-300 focus:outline-none focus:ring-2 focus:ring-gray-300 gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3v-1" />
        </svg>
        I already have an account
      </a>

      <a href="/guest" class="inline-flex items-center justify-center px-8 py-3 bg-gray-100 text-gray-800 text-lg font-semibold rounded-lg border border-gray-300 shadow-sm hover:bg-gray-200 transition duration-300 focus:outline-none focus:ring-2 focus:ring-gray-300 gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
        </svg>
        Continue as Guest
      </a>

    </div>

    <% } else { %>
    <div class="mt-8">
      <a href="/dashboard" class="inline-flex items-center px-8 py-4 bg-green-600 text-white text-lg font-bold rounded-lg shadow-xl hover:bg-green-700 transition duration-300 focus:outline-none focus:ring-4 focus:ring-green-300 gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        Go to Dashboard
      </a>
    </div>
    <% } %>

  </div>
</div>

<%- include('partials/footer') %>