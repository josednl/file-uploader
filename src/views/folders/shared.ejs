<%- include('../partials/header', { title: 'Shared Folders' }) %>

<main class="max-w-6xl mx-auto px-6 py-12">

  <header class="mb-10 border-b pb-4">
    <h1 class="text-4xl font-extrabold text-gray-900 tracking-tight flex items-center gap-3">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
      </svg>
      Folders Shared With Me
    </h1>
    <p class="text-lg text-gray-600 mt-1">Access and manage collaborative folders.</p>
  </header>

  <% if (sharedFolders.length === 0) { %>
    <div class="text-center bg-gray-50 p-12 rounded-xl border border-dashed border-gray-300 space-y-2">
      <p class="text-lg text-gray-600">No folders have been shared with you yet. üôÅ</p>
      <a href="/dashboard" class="text-blue-600 hover:underline font-medium text-sm inline-flex items-center gap-1">
        Go back to Dashboard
      </a>
    </div>
  <% } else { %>
    <div class="overflow-x-auto bg-white rounded-xl shadow-lg border border-gray-100">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Folder Name</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Shared By</th>
            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Your Permission</th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% sharedFolders.forEach(shared => { %>
            <tr class="hover:bg-gray-50 transition">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <a href="/folders/<%= shared.folder.id %>" class="flex items-center text-blue-600 hover:text-blue-800 transition">
                  <svg class="w-5 h-5 mr-2 text-yellow-500" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M2 6a2 2 0 0 1 2-2h4l2 2h6a2 2 0 0 1 2 2v6a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V6z"/>
                  </svg>
                  <%= shared.folder.name %>
                </a>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= shared.folder.owner.email %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <% if (shared.permission === 'OWNER') { %>
                  <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">Owner</span>
                <% } else if (shared.permission === 'EDIT') { %>
                  <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">Can Edit</span>
                <% } else { %>
                  <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Read Only</span>
                <% } %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex justify-end gap-3">
                  <a href="/folders/<%= shared.folder.id %>" 
                    class="inline-flex items-center px-4 py-2 border border-blue-600 text-blue-600 rounded-lg hover:bg-blue-50 text-sm font-medium transition"
                    title="Open folder <%= shared.folder.name %>">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.477 0 8.268 2.943 9.542 7-1.274 4.057-5.065 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                    Open
                  </a>
                  
                  <% if (shared.permission !== 'OWNER') { %>
                    <form action="/folders/unshare/<%= shared.folder.id %>" method="POST" onsubmit="return confirm('Are you sure you want to remove access to this folder?');" class="inline">
                      <button type="submit" class="inline-flex items-center px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 text-sm font-medium transition">
                        Leave
                      </button>
                    </form>
                  <% } %>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>

  <div class="mt-10 pt-4 border-t">
    <a href="/dashboard" class="text-blue-600 hover:text-blue-800 font-medium text-sm inline-flex items-center gap-1.5 transition">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Dashboard
    </a>
  </div>
</main>

<%- include('../partials/footer') %>
