      <li class="flex items-center space-x-1">
        <% if (index === breadcrumb.length - 1) { %>
        <span aria-current="page" class="font-semibold text-gray-900"><%= crumb.name %></span>
        <% } else { %>
        <a href="/folders/<%= crumb.id %>" class="hover:text-blue-600 font-medium"><%= crumb.name %></a>
        <span aria-hidden="true" class="mx-2 text-gray-400">/</span>
        <% } %>
