<%- include('../partials/header', { title: folder.name }) %>

<main class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-10">

  <!-- Breadcrumb -->
  <nav class="text-sm text-gray-500 mb-4">
    <ul class="flex items-center space-x-2">
      <li><a href="/folders/" class="hover:underline">Root</a></li>
      <% breadcrumb.forEach((crumb, index) => { %>
        <li>/</li>
        <li>
          <% if (index === breadcrumb.length - 1) { %>
            <span class="font-semibold text-gray-800"><%= crumb.name %></span>
          <% } else { %>
            <a href="/folders/<%= crumb.id %>" class="hover:underline"><%= crumb.name %></a>
          <% } %>
        </li>
      <% }) %>
    </ul>
  </nav>

  <!-- Folder Heading + Actions -->
  <div class="mb-6 flex justify-between items-center">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= folder.name %></h1>
      <p class="text-sm text-gray-500">Created at <%= folder.createdAt.toLocaleDateString() %></p>
    </div>

    <div class="flex gap-3">
      <a href="/folders/edit/<%= folder.id %>" class="text-sm bg-yellow-500 text-white px-3 py-2 rounded hover:bg-yellow-600">Edit</a>
      <form action="/folders/delete/<%= folder.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this folder and all its contents?');">
        <button type="submit" class="text-sm bg-red-600 text-white px-3 py-2 rounded hover:bg-red-700">Delete</button>
      </form>
    </div>
  </div>

  <!-- File Upload -->
  <div class="mb-10 border border-gray-300 p-4 rounded bg-gray-50">
    <h2 class="text-lg font-semibold text-gray-800 mb-3">Upload a file to this folder</h2>
    <form action="/files/upload" method="POST" enctype="multipart/form-data" class="flex items-center gap-4">
      <input type="hidden" name="folderId" value="<%= folder.id %>">
      <input type="file" name="file" required class="border border-gray-300 rounded px-4 py-2 text-sm">
      <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 text-sm">
        Upload
      </button>
    </form>
  </div>

  <!-- Files in folder -->
  <div class="mb-10">
    <h2 class="text-xl font-semibold text-gray-800 mb-2">Files in this folder</h2>

    <% if (folder.files.length === 0) { %>
      <p class="text-gray-500">This folder is empty.</p>
    <% } else { %>
      <ul class="space-y-4">
        <% folder.files.forEach(file => { %>
          <li class="bg-white shadow rounded p-4 flex justify-between items-center">
            <div>
              <p class="font-medium text-gray-900"><%= file.name %></p>
              <p class="text-sm text-gray-500"><%= file.mimeType %> ‚Ä¢ <%= (file.size / 1024).toFixed(1) %> KB</p>
            </div>
            <div class="flex gap-3">
              <a href="/files/details/<%= file.id %>?from=<%= folder ? ('/folders/' + folder.id) : '/files' %>" class="text-blue-600 hover:underline text-sm">View</a>
              <a href="/files/download/<%= file.id %>" class="text-green-600 hover:underline text-sm">Download</a>
              <form action="/files/delete/<%= file.id %>" method="POST" onsubmit="return confirm('Delete this file?');">
                <button type="submit" class="text-red-600 hover:underline text-sm">Delete</button>
              </form>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </div>

  <!-- Subfolders -->
  <div class="mb-10">
    <h2 class="text-xl font-semibold text-gray-800 mb-2">Subfolders</h2>
    <% if (folder.children.length === 0) { %>
      <p class="text-gray-500">No subfolders yet.</p>
    <% } else { %>
      <ul class="space-y-3">
        <% folder.children.forEach(child => { %>
          <li>
            <a href="/folders/<%= child.id %>" class="text-blue-600 hover:underline">
              üìÅ <%= child.name %>
            </a>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </div>

  <!-- Create Subfolder Form -->
  <div class="border-t pt-6 mt-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-4">Create a Subfolder</h2>
    <form action="/folders/create" method="POST" class="flex items-center gap-4">
      <input type="hidden" name="parentId" value="<%= folder.id %>">
      <input
        type="text"
        name="name"
        placeholder="Subfolder name"
        required
        class="w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring focus:border-blue-300"
      />
      <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
        Create
      </button>
    </form>
  </div>
</main>

<%- include('../partials/footer') %>
