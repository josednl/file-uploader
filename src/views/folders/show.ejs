          <tr class="hover:bg-gray-50 transition">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-blue-600">
              <a href="/folders/<%= child.id %>" class="flex items-center hover:underline">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 flex-shrink-0 text-blue-400 mr-2" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" />
                </svg>
                <%= child.name %>
              </a>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= child.fileCount %> files, <%= child.folderCount %> folders
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <a href="/folders/<%= child.id %>" class="text-blue-600 hover:text-blue-800">Open</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <% } %>
  </section>

  ---

  <section class="mb-12">
    <h2 class="text-2xl font-bold mb-6 text-gray-900 flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0013.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
      </svg>
      Files (<%= folder.files.length %>)
    </h2>

    <% if (folder.files.length === 0) { %>
    <p class="text-gray-500 italic p-4 border rounded-lg bg-white">No files have been uploaded to this folder yet.</p>
    <% } else { %>
    <div class="overflow-x-auto bg-white rounded-xl shadow-lg border border-gray-100">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">File Name</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Size</th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% folder.files.forEach(file => { %>
          <tr class="hover:bg-gray-50 transition">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 max-w-xs truncate">
              <a href="/files/details/<%= file.id %>?from=/folders/<%= folder.id %>" class="hover:text-blue-600 hover:underline">
                <%= file.name %>
              </a>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= file.mimeType %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= formatBytes(file.size) %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <div class="flex flex-wrap justify-end gap-3">
                <a href="/files/details/<%= file.id %>?from=/folders/<%= folder.id %>" class="text-blue-600 hover:text-blue-800 font-medium">
                  View
                </a>

                <a href="/files/download/<%= file.id %>" class="text-green-600 hover:text-green-800 font-medium">
                  Download
                </a>

                <% if (permission === 'OWNER' || permission === 'EDIT') { %>
                <form action="/files/delete/<%= file.id %>" method="POST" onsubmit="return confirm('Delete this file?');" class="inline">
                  <button type="submit" class="text-red-600 hover:text-red-800 font-medium">
                    Delete
                  </button>
                </form>
