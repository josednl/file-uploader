  ---

  <% if (permission === 'OWNER') { %>
  <section class="mt-8 border-t pt-8 grid grid-cols-1 lg:grid-cols-2 gap-8">

    <div>
      <h2 class="text-2xl font-bold mb-4 text-gray-900">Share with User</h2>
      <form action="/folders/<%= folder.id %>/share" method="POST" class="flex flex-col gap-4 max-w-lg">
        <div class="flex gap-2">
          <input type="email" name="email" placeholder="User email" required class="flex-grow border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" />
          <select name="permission" class="border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400">
            <option value="READ">Read Only</option>
            <option value="EDIT">Can Edit</option>
          </select>
        </div>
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-semibold transition shadow-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
          Share Folder
        </button>
      </form>

      <% if (sharedUsers && sharedUsers.length > 0) { %>
      <div class="mt-6">
        <h3 class="text-lg font-semibold mb-2 text-gray-800">Shared with:</h3>
        <ul class="space-y-2">
          <% sharedUsers.forEach(item => { %>
          <li class="flex items-center justify-between bg-gray-50 p-3 rounded">
            <span class="text-sm text-gray-700"><%= item.user.email %></span>

            <form action="/folders/<%= folder.id %>/share/update" method="POST" class="flex items-center gap-2">
              <input type="hidden" name="userId" value="<%= item.user.id %>">
              <select name="permission" class="border border-gray-300 rounded px-2 py-1 text-sm">
                <option value="READ" <%= item.permission === 'READ' ? 'selected' : '' %>>Read</option>
                <option value="EDIT" <%= item.permission === 'EDIT' ? 'selected' : '' %>>Edit</option>
              </select>
              <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-xs font-semibold transition">
                Update
              </button>
            </form>
            <form action="/folders/<%= folder.id %>/unshare/user" method="POST" onsubmit="return confirm('Remove this user from shared access?');">
              <input type="hidden" name="userId" value="<%= item.user.id %>">
              <button type="submit" class="text-red-600 hover:text-red-800 text-sm font-medium">Remove</button>
            </form>
          </li>
          <% }) %>
        </ul>
      </div>
      <% } %>

    </div>

    <div>
      <h2 class="text-2xl font-bold mb-4 text-gray-900">Public Link</h2>
      <% if (folder.publicShare) { %>
      <div class="bg-green-50 border border-green-200 p-4 rounded-lg shadow-sm">
        <p class="font-semibold text-green-800 mb-2 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.586 4.586a2 2 0 112.828 2.828l-3.2 3.2a1 1 0 01-1.414 0 1 1 0 010-1.414l3.2-3.2zm-2.828 7.07a2 2 0 11-2.828-2.828l3.2-3.2a1 1 0 011.414 0 1 1 0 010 1.414l-3.2 3.2zM4 12a2 2 0 100 4 2 2 0 000-4z" clip-rule="evenodd" />
          </svg>
          Public link is Active:
        </p>
        <div class="flex items-center gap-3">
          <input type="text" value="/shared/<%= folder.publicShare.token %>" readonly class="flex-grow border border-gray-300 bg-white rounded-lg px-4 py-2 text-sm truncate" onclick="this.select(); document.execCommand('copy'); alert('Link copied!');" title="Click to copy link" />
          <form action="/folders/unshare/<%= folder.id %>/public" method="POST" onsubmit="return confirm('Are you sure you want to disable the public link?');">
            <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg font-semibold text-sm transition shadow-md">
              Disable Link
            </button>
          </form>
        </div>
      </div>
      <% } else { %>
      <div class="bg-gray-50 border border-gray-200 p-4 rounded-lg shadow-sm">
        <p class="text-gray-700 mb-4">No public link currently available for this folder.</p>
        <form action="/folders/share/<%= folder.id %>/public" method="POST" class="inline">
          <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-5 py-2 rounded-lg shadow font-semibold transition flex items-center gap-2 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8.684 13.342C8.886 12.893 9 12.443 9 12h2c0 .444.114.893.316 1.342l2.364 2.364A.5.5 0 0113.636 17H5.364a.5.5 0 01-.354-.854l2.364-2.364zM12 4a8 8 0 100 16A8 8 0 0012 4z" />
            </svg>
            Generate Public Link
          </button>
        </form>
      </div>
      <% } %>
    </div>

  </section>
  <% } %>

</main>

