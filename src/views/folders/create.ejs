<%
  const getFolderLabel = (f) => {
    if (f.pathName) {
      return f.pathName;
    }
    
    const indent = f.level ? '‚Äî'.repeat(f.level) : '';
    return `${indent} ${f.name}`;
  }
%>

<%- include('../partials/header', { title: 'New Folder' }) %>

<main class="max-w-xl mx-auto py-12 px-6">
  
  <div class="bg-white p-8 sm:p-10 rounded-xl shadow-2xl border border-gray-100">
    
    <header class="mb-8 border-b pb-4 text-center">
      <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight flex items-center justify-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-yellow-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h4l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
        </svg>
        Create New Folder
      </h1>
      <p class="text-gray-500 text-sm mt-1">Organize your files by creating a new directory.</p>
    </header>

    <form action="/folders/create" method="POST" class="space-y-6">
      
      <div>
        <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">Folder Name</label>
        <input type="text" id="name" name="name" required placeholder="e.g., Project X Documents"
               class="mt-1 block w-full p-3 rounded-lg border-2 border-gray-300 shadow-sm
                      focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition" />
      </div>

      <div>
        <label for="parentId" class="block text-sm font-semibold text-gray-700 mb-2">Parent Folder (Location)</label>
        <select id="parentId" name="parentId"
                class="mt-1 block w-full p-3 rounded-lg border-2 border-gray-300 shadow-sm
                       focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition">
          <option value="">
            üìÅ ‚Äî Root Directory ‚Äî
          </option>
          <% folders.forEach(folder => { %>
            <option value="<%= folder.id %>">
              <%= getFolderLabel(folder) %>
            </option>
          <% }) %>
        </select>
        <p class="text-xs text-gray-500 mt-2">The new folder will be placed inside the selected location.</p>
      </div>

      <div class="pt-4">
        <button type="submit"
                class="w-full inline-flex items-center justify-center gap-2 px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition shadow-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h4l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
          </svg>
          Create Folder
        </button>
      </div>
    </form>
    
    <div class="mt-8 pt-6 border-t text-center">
      <a href="/folders" class="text-blue-600 hover:text-blue-800 font-medium text-sm inline-flex items-center gap-1.5 transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to All Folders
      </a>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
