<%- include('partials/header', { title: '500 - Server Error' }) %>

<div class="min-h-[calc(100vh-theme(space.32))] flex flex-col items-center justify-center">
    <div class="max-w-md w-full text-center space-y-6">
        <div class="space-y-4">
            <i class="fas fa-exclamation-triangle text-6xl text-red-500"></i>
            <h1 class="text-9xl font-bold text-red-600">500</h1>
            <h2 class="text-2xl font-semibold text-gray-800">Server Error</h2>
            <p class="text-gray-600">Sorry, an unexpected error has occurred.</p>
            <% if (error && process.env.NODE_ENV === 'development') { %>
                <p class="text-sm text-gray-500 bg-gray-100 p-4 rounded-md font-mono"><%= error %></p>
            <% } %>
        </div>

        <div class="mt-8">
            <a href="/" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-red-600 hover:bg-red-700 transition duration-200">
                <i class="fas fa-home mr-2"></i>Back to Home
            </a>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
