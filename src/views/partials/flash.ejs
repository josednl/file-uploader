<div class="max-w-7xl mx-auto px-6 pt-4">

  <% if (success && success.length > 0) { %>
    <% success.forEach(function(msg) { %>
      <div class="flash-message bg-green-50 border border-green-300 text-green-800 px-5 py-4 rounded-lg relative mb-4 shadow-sm transition-opacity duration-500" role="alert">
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          
          <span class="block sm:inline font-medium"><%= msg %></span>
        </div>
        
        <button class="absolute top-1 right-1 p-2 rounded-full hover:bg-green-100 transition" onclick="this.closest('[role=\'alert\']').remove()">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    <% }); %>
  <% } %>

  <% if (error && error.length > 0) { %>
    <% error.forEach(function(msg) { %>
      <div class="flash-message bg-red-50 border border-red-300 text-red-800 px-5 py-4 rounded-lg relative mb-4 shadow-sm transition-opacity duration-500" role="alert">
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          
          <span class="block sm:inline font-medium"><%= msg %></span>
        </div>
        
        <button class="absolute top-1 right-1 p-2 rounded-full hover:bg-red-100 transition" onclick="this.closest('[role=\'alert\']').remove()">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    <% }); %>
  <% } %>
</div>
