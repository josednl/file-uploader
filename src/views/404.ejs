<%- include('partials/header', { title: '404 - Page Not Found' }) %>

<div class="min-h-screen flex flex-col items-center justify-center px-6 py-16 sm:px-8 lg:px-12">
  <div class="max-w-xl w-full text-center space-y-8 bg-white p-10 sm:p-12 rounded-2xl shadow-2xl border border-gray-200">
    
    <div class="flex justify-center mb-6">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 text-blue-600 animate-bounce-slow" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
