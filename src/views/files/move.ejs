<%
  const getFolderLabel = (folder) => {
    if (folder.pathName) {
      return folder.pathName;
    }
    
    const indent = folder.level ? '‚Äî'.repeat(folder.level) : '';
    return `${indent} ${folder.name}`;
  }

  const returnUrl = file.folder ? ('/folders/' + file.folder.id) : '/files';
%>

<%- include('../partials/header', { title: 'Move File' }) %>

<main class="max-w-xl mx-auto py-12 px-6">
  
  <div class="bg-white p-8 rounded-xl shadow-2xl border border-gray-100">
    
    <header class="mb-8 border-b pb-4">
      <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">
        Move File: <span class="text-blue-600"><%= file.name %></span>
      </h1>
      <p class="text-gray-500 mt-1">Select a new destination for this file.</p>
    </header>

    <form action="/files/move/<%= file.id %>" method="POST" class="space-y-6">
      <div>
        <label for="folderId" class="block text-lg font-semibold text-gray-800 mb-2">
          Destination Folder
        </label>
        
        <select 
          id="folderId" 
          name="folderId" 
          required
          class="w-full p-3 rounded-lg border-2 border-gray-300 bg-white text-gray-900 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition shadow-sm"
        >
          <option value="none" <%= !file.folder ? 'selected' : '' %>>
            üìÅ -- Root Directory --
          </option>
          
          <% folders.forEach(folder => { 
            const isDisabled = file.folder && folder.id === file.folder.id;
          %>
            <option 
              value="<%= folder.id %>" 
              <%= isDisabled ? 'disabled' : '' %>
              title="<%= isDisabled ? 'Current location' : 'Move to this folder' %>"
            >
              <%= getFolderLabel(folder) %>
              <%= isDisabled ? ' (Current)' : '' %>
            </option>
          <% }) %>
        </select>
        
        <p class="text-sm text-gray-500 mt-2">Current Location: 
          <% if (file.folder) { %>
            <span class="font-medium text-gray-700"><%= file.folder.name %></span>
          <% } else { %>
            <span class="font-medium text-gray-700">Root Directory</span>
          <% } %>
        </p>
      </div>

      <div class="pt-4">
        <button type="submit" class="w-full inline-flex items-center justify-center gap-2 px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition shadow-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 7h12m0 0l-4-4m4 4l-4 4m-4 12H4m0 0l4 4m-4-4l4-4" />
          </svg>
          Confirm Move
        </button>
      </div>
    </form>

    <div class="mt-8 pt-6 border-t">
      <a href="/files/details/<%= file.id %>?from=<%= returnUrl %>" class="text-sm text-blue-600 hover:text-blue-800 font-medium inline-flex items-center gap-1.5 transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to File Details
      </a>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
