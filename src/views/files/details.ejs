<%- include('../partials/header', { title: 'File Details' }) %>
<%
  const returnUrl = typeof from !== 'undefined' ? from : '/files';
%>

<main class="max-w-2xl mx-auto mt-12 bg-white p-8 rounded-xl shadow-md">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-2 flex items-center gap-2">
      <i class="fas fa-file-alt text-blue-500"></i>
      File Details
    </h1>
    <p class="text-gray-500 text-sm">Overview of the selected file</p>
  </div>

  <div class="bg-gray-50 rounded-lg p-6 mb-6 border border-gray-200">
    <ul class="space-y-3 text-gray-800 text-sm">
      <li>
        <strong class="inline-block w-24">Name:</strong>
        <span><%= file.name %></span>
      </li>
      <li>
        <strong class="inline-block w-24">MIME Type:</strong>
        <span><%= file.mimeType %></span>
      </li>
      <li>
        <strong class="inline-block w-24">Size:</strong>
        <span><%= (file.size / 1024).toFixed(2) %> KB</span>
      </li>
      <li>
        <strong class="inline-block w-24">Uploaded:</strong>
        <span><%= file.createdAt.toDateString() %></span>
      </li>
      <li>
        <strong class="inline-block w-24">Folder:</strong>
        <% if (file.folder) { %>
        <span><%= file.folder.name %></span>
        <% } else { %>
        <span class="text-gray-500 italic">No folder</span>
        <% } %>
      </li>
    </ul>

  </div>

  <div class="flex flex-col sm:flex-row sm:items-center gap-4">
    <a href="/files/download/<%= file.id %>" class="flex items-center justify-center gap-2 bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 text-sm">
      <i class="fas fa-download"></i> Download
    </a>

    <a href="/files/move/<%= file.id %>" class="flex items-center justify-center gap-2 bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600 text-sm">
      <i class="fas fa-folder-open"></i> Move to Folder
    </a>

    <form action="/files/delete/<%= file.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this file?')">
      <button type="submit" class="flex items-center justify-center gap-2 bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 text-sm">
        <i class="fas fa-trash-alt"></i> Delete
      </button>
    </form>
  </div>

  <div class="mt-6">
    <a href="<%= returnUrl %>" class="text-blue-600 hover:underline text-sm flex items-center gap-1">
      <i class="fas fa-arrow-left"></i> Back
    </a>
  </div>
</main>

<%- include('../partials/footer') %>