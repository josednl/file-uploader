<%- include('../partials/header', { title: 'File Details' }) %>

<div class="max-w-xl mx-auto mt-10 bg-white p-6 rounded shadow">
  <h1 class="text-2xl font-semibold mb-4">File Details</h1>

  <ul class="mb-6 space-y-2 text-gray-700">
    <li><strong>Name:</strong> <%= file.name %></li>
    <li><strong>MIME Type:</strong> <%= file.mimeType %></li>
    <li><strong>Size:</strong> <%= (file.size / 1024).toFixed(2) %> KB</li>
    <li><strong>Uploaded:</strong> <%= file.createdAt.toDateString() %></li>
  </ul>

  <div class="flex gap-4">
    <a href="/files/download/<%= file.id %>" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Download</a>
    
    <form action="/files/delete/<%= file.id %>" method="POST" onsubmit="return confirm('Are you sure?')">
      <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">Delete</button>
    </form>
  </div>

  <div class="mt-6">
    <a href="/files" class="text-blue-600 hover:underline text-sm">‚Üê Back to My Files</a>
  </div>
</div>

<%- include('../partials/footer') %>
